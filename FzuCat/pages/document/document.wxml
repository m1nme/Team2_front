<!--pages/document/document.wxml-->
<view class="container">
<view class="catImagePos">
 <image mode="{{image.aspectFill}}" src="{{catImageUrl}}" class="catImage">
 </image>
</view>
<view class="catInfo" >
  <view class="color">
    <text class="titleFont">毛色：\n</text>
    <text class="pageFont">{{color}}</text>
  </view>
  <view class="sex">
    <text class="titleFont"> 性别：\n</text>
    <text class="pageFont">{{sex}}</text>
  </view>
  <view class="status">
    <text class="titleFont">状态：\n</text>
    <text class="pageFont">{{status}}</text>
  </view>
  <view class="character">
    <text class="titleFont">性格：\n</text>
    <text class="pageFont">{{char}}</text>
  </view>
</view>
<view class="newFeed">
    <text class="titleFont">近期喂食\n</text>
</view>
<view >
  <image class="followIcon" catchtap='onCollectionTap' wx:if="{{collected}}" src="https://i.loli.net/2020/11/20/NZioqyA3jWU2Ca9.png"></image>
 <image   class="followIcon" catchtap='onCollectionTap' wx:else src="https://i.loli.net/2020/11/20/3Y9OGhH8LNxjJpn.png"></image>
</view>
<view>
  <image class="addIcon"src="https://i.loli.net/2020/11/20/v6wHoPh52cWQt47.png"></image>
</view>
<view>
  <navigator class="forumLink">讨论它</navigator>
</view>

<button  class="addIcon" size="mini" bindtap="modalinput">
</button>
   <modal hidden="{{hiddenmodalput}}" title="请输入喂食信息" 
   			confirm-text="提交" cancel-text="取消" bindcancel="modalinput" 
   			bindconfirm="confirm">
     <!-- 这里可以自由选择你的输入框类型<input type='text' placeholder="请输入内容" auto-focus/> -->
     <text class="pageFont">请注意喂食合适的食物</text>
     <input type="text" placeholder="食物" class="weui-input"auto-focus></input>
     <text class="pageFont">如果三小时内有喂食记录请减少喂食量</text>
     <input type="text" placeholder="分量" auto-focus></input>
   </modal>
  </view>
   