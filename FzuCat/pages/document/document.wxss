/* pages/document/document.wxss */
.box{
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: baseline;
  align-content:center;
}

.catImage{
  position: relative;
}
.catImagePos{
  margin-top: 10rpx;
  display: flex;
  justify-content: center;
  width: 100%;
}
.catInfo{
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 100%;
}
.color{
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
.sex{
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
.status{
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
.character{
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  
}
.h-box{
  width: 100%;
  display: flex;
  justify-content: space-around;
}
.newFeed{
  display:flex;
  width: 100%;
  margin-left: 150rpx;
}
.newFeedLog{
  display:flex;
  width: 100%;
  flex-direction: column;
}

.titleFont{
  font-weight: lighter;
  font-size: smaller;
  color: gray;
}
.pageFont{
  font-weight: bold;
  font-size: 30rpx;
}
.FeedLogFont{
  margin-left: 120rpx;
  width: 100%;
  color: rgba(85, 85, 85, 100);
  font-size: 16px;
  text-align: left;
  font-family: PingFangSC-regular;
}
.followIcon{
  position: fixed;
  width: 80rpx;
  height: 80rpx;
  bottom: 10%;
  right: 36%;
}
.addIcon{
  position: fixed;
  width: 80rpx;
  height: 80rpx;
  bottom: 10%;
  right: 4%;
}
.icon{
  width: 45rpx;
  height: 45rpx;
  z-index: 99;

}

.talk{
  position: fixed;
  width: 80rpx;
  height: 80rpx;
  bottom: 10%;
  right: 20%;
  border-radius: 50%;
  background-color: #FC8736 ;
  display: flex;
  justify-content: center;
  align-items:  center;
}
.talk:hover{
  opacity: 0.6;
}
button {
  margin: 0;
  padding: 0;
  background-color: inherit;
  position: static;
}

button:after {
  content: none;
}
button::after {
  border: none;
}

.forumLink{
  display: flex;
  width: 100%;
  flex-direction: row-reverse;
}
.weinput{
  border-bottom: 1px solid gray;
}

