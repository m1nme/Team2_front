page{
  background-color: #ffffff;
}
.begin{
  position: relative;
  background-color: #ff9900;
  height: 100rpx;
  border-bottom-left-radius: 18px;
  border-bottom-right-radius: 18px;
}
.text01{
  position: absolute;
  left: 10%;
  top: 20%;
  height: 60rpx;
  width: 600rpx;
  font-size: 34rpx;
  background-color: #ffffff;
  border-radius: 28rpx;
}
.hr {
  position: relative;
  width: 100%;
  height: 15px;
  background-color: #ffffff;
}
 
.item {
  position: relative;
  display: flex;
  flex-direction: row;
}
.image{
  position: absolute;
  top: 16%;
  left: 10%;
  width:80rpx;
  height: 80rpx;
  border-radius: 50%;
}
 
.title {
  position: relative;
  left: 15%;
  top: 8%;
  padding-top: 15px;
  padding-bottom: 10px;
  padding-left: 100rpx;
  font-size: 24rpx;
}
 
.detail2 {
  font-size: 15px;
  position: absolute;
  right: 10px;
  height: 50px;
  line-height: 50px;
  color: #888;
}
 
.line {
  border: 1px solid #cccccc;
  opacity: 0.2;
}
.navigator-hover {
  color:#ff9900;
}