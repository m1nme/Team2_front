
/* pages/post/post.wxss */
.post {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  position: relative;
  top: 18px;
  left: 18px;
  width: 100%;
  color: rgba(16, 16, 16, 100);
  font-size: 16px;
  font-weight: 600;
  text-align: left;
  font-family: PingFangSC-regular;
}

.item {
  position: relative;
  display: flex;
  flex-direction: row;
  left: 18px;
  top: 30px;
  width: 100%;
  height: 150rpx;
}

.image{
  position: relative;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
 
.nt {
  position: relative;
  left: 0%;
  top: 0%;
  display: flex;
  flex-direction: column;
}

.name {
  position: relative;
  padding-top: 5px;
  padding-left: 18px;
  color : #101010 ;
  font-size: 12px;
  text-align: left;
  font-family: PingFangSC-regular;
}

.time {
  position: relative;
  padding-top: 3px;
  padding-left: 18px;
  color: #9c9a9a;
  font-size: 12px;
  text-align: left;
  font-family: Helvetica-regular;
}

.line {
  position: relative;
  width: 90%;
  left: 18px;
  right: 18px;
  border: 2rpx solid #ccc;
  opacity: 0.2;
}

.content {
  position: relative;
  width: 90%;
  display: flex;
  color: rgba(16, 16, 16, 100);
  font-size: 16px;
  font-family: PingFangSC-regular;
}

.imList {
  position: relative;
  left: 0px;
  top: 20px;
  width: 90%;
  display: flex;
  flex-direction: row;
  column-count: 3;
  column-gap: 18px;
}

.imageList{
  position: relative;
  width: 150px;
  height: 89px;
  margin-left: 18px;
}

.ablum{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
