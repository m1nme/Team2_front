/* pages/post/post.wxss */
page{
  background-color: rgba(247, 247, 247);
}

.begin{
  position: relative;
  background-color: #ff9900;
  height: 100rpx;
  box-shadow: 0rpx 20rpx 10rpx 20rpx rgb(247, 247, 247);
  border-bottom-left-radius: 36rpx;
  border-bottom-right-radius: 36rpx;
}

.headline {
  display: flex;
  position: relative;
  align-items: center;
  justify-content: center;
  top: 20%;
  font-size: 38rpx;
  color: white;
}

.hr {
  position: relative;
  width: 100%;
  height: 12rpx;
  background-color: rgb(247, 247, 247);
}

.post {
  position: relative;
  display: flex;
  height: 80px; 
  line-height: 20px;
  text-align: center;
  background-color: #ffffff;
}

.text {
  position: relative;
  display: flex;
  flex-direction: column;
}

.title {
  position: relative;
  padding-top: 18px;
  padding-left: 18px;
  color: rgba(16, 16, 16, 100);
  font-size: 16px;
  font-weight: 600;
  text-align: left;
  font-family: PingFangSC-regular;
  display: -webkit-box;     /*设置为弹性盒子*/
  width: 264px;
  -webkit-line-clamp: 1;    /*最多显示1行*/
  overflow: hidden;         /*超出隐藏*/
  text-overflow: ellipsis;  /*超出显示为省略号*/
  -webkit-box-orient: vertical;
  word-break: break-all;    /*强制英文单词自动换行*/
  white-space: normal;
}

.time {
  position: relative;
  padding-top: 8px;
  padding-left: 10px;
  color: rgba(252, 135, 54, 100);
  font-size: 12px;
  text-align: left;
  font-family: PingFangSC-regular;
}

.amount {
  position: absolute;
  display: flex;
  flex-direction: row;
  right: 5%;  /*靠右*/
}

.iconBrowse {
  position: relative;
  width: 20px;
  height: 20px; 
  margin-left: -110px;
  margin-top: 50px;
}

.numberBrowse{
  position: relative;
  margin-left: 8px;
  margin-top: 50px;
  color: rgba(170, 170, 170, 100);
  font-size: 12px;
  text-align: left;
  font-family: PingFangSC-regular;
}

.iconComment {
  position: relative;
  width: 20px;
  height: 20px; 
  margin-top: 50px;
  margin-left: 18px; 
}

.numberComment{
  position: relative;
  margin-left: 8px;
  margin-top: 50px;
  color: rgba(170, 170, 170, 100);
  font-size: 12px;
  text-align: left;
  font-family: PingFangSC-regular;
}

.navigator-hover {
  color:#ff9900;
}